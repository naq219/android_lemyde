<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->

        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:actionBarWidgetTheme">@style/PopupMenuTextView</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <!--Thay đổi danh sách menu tràn Xem mục chiều cao và thuộc tính -->
        <item name="android:listPreferredItemHeightSmall">35dp</item>
        <item name="android:listPreferredItemPaddingLeft">5dp</item>
        <item name="android:listPreferredItemPaddingRight">5dp</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/mauxamtrang</item>
        <item name="colorControlHighlight">@color/mauxamtrang</item>
    </style>

    <style name="AppThemeSwipeBack" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="khongactionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/mautrang</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoTitleDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEditTextStyle" parent="textbase">
        <item name="android:textColor">#666666</item>
        <item name="android:padding">@dimen/btn_pading9</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/bg_khung</item>
        <item name="android:textSize">@dimen/btn_SizeedtText</item>
    </style>

    <style name="EditTextStyle" parent="textbase">
        <item name="android:textColor">@color/mauden</item>
        <item name="android:padding">@dimen/btn_pading9</item>
        <item name="android:background">@drawable/bg_khung_edit</item>
        <item name="android:textSize">@dimen/btn_SizeedtText</item>
    </style>

    <style name="textbase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="tv_dangnhap" parent="textbase"></style>

    <style name="tv_18sp" parent="textbase">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="tv_12sp" parent="textbase">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="tv_13sp" parent="textbase">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="tv_14sp" parent="textbase">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="title_sanpham">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="title_gia">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_name">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_edittext">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColorHint">@color/dg_vien</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_khungvien</item>
    </style>

    <style name="title_vanchuyen">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_15sp" parent="textbase">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_15sp" parent="textbase">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="tv_14sp_search" parent="textbase">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/btn_SizeedtText</item>
    </style>

    <style name="tv_16sp" parent="textbase">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="myTv" >
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#C6090909</item>
    </style>

    <!-- Thay đổi danh sách menu tràn menuXem thuộc tính Divider -->
    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">@color/dg_vien</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <!-- Thay đổi danh sách menu tràn Xem kích thước văn bản và kích thước văn bản -->
    <style name="PopupMenuTextView" parent="@style/android:Theme.Holo.Light">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">5sp</item>
    </style>

    <!-- Thay đổi nền menu tràn-->
    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#F5F5F5</item>
    </style>

    <style name="YOURSTYLE" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/maudenone</item>
        <item name="android:itemBackground">#F5F5F5</item>
        <item name="android:layout_width">10dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="tv_nhapdonhead" >
        <item name="android:textColorHint">#D0918528</item>
        <item name="android:textColor">#FFEB3B</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>
