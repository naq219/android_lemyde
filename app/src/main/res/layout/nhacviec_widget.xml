<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/root"
    android:background="#7AFFFFFF"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:focusableInTouchMode="false"
        android:layout_height="wrap_content">
        <View
            android:focusableInTouchMode="false"
            android:background="#97FF5722"
            android:layout_width="10dp"
            android:visibility="gone"
            android:layout_height="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vgOpen"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/tmpinfo"
            android:textColor="#AB47BC"

            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
           style="@style/textbase"/>
        <TextView
            android:id="@+id/tmp1"
            android:layout_below="@+id/tmpinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#2A6C6A6C"
            android:padding="10dp"
            android:text="Kiểm tra" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/lv"
            android:layout_below="@+id/tmp1"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/lo_add"
            android:layout_below="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_menu_send"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/vg_dl"
            android:visibility="gone"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <TextView
                style="@style/myTv"
                android:id="@+id/dl_title"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/dl_yes"
                    android:text="Đồng ý"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/dl_no"
                    android:text="Hủy"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="30dp"
        android:id="@+id/close"
        android:padding="5dp"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_cancel"
        android:layout_height="30dp"/>


</FrameLayout>