                android:padding="15dp"
                android:src="@drawable/ic_menu" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cardview_dark_background" />
</LinearLayout>