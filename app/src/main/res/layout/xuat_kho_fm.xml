<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mautrang"
    tools:context="com.project.shop.lemy.xuatnhapkho.XuatKhoFm">

    <ScrollView
        android:id="@+id/scView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnXuatHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_sanpham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái" />

                    <TextView
                        android:id="@+id/tvTrangThai"
                        style="@style/tv_13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:background="@drawable/bg_khung"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_sanpham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn hàng" />

                    <TextView
                        android:id="@+id/tvMaDh"
                        style="@style/tv_13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:layout_weight="1"
                        android:background="@drawable/bg_khung"
                        android:hint="Nhập ghi chú"
                        android:padding="@dimen/dp10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnXuatHang3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lnKhoXh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/title_sanpham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kho" />

                    <TextView
                        android:id="@+id/tvChonKhoXh"
                        style="@style/tv_13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:background="@drawable/bg_khung"
                        android:drawableRight="@drawable/ic_down_tt"
                        android:gravity="center_vertical"
                        android:hint="Chọn kho"
                        android:padding="@dimen/dp10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnChonXuatkho"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_sanpham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kho" />

                    <TextView
                        android:id="@+id/tvChonKhoXk"
                        style="@style/tv_13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:background="@drawable/bg_khung"
                        android:drawableRight="@drawable/ic_down_tt"
                        android:gravity="center_vertical"
                        android:hint="Chọn kho"
                        android:padding="@dimen/dp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_sanpham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kiểu" />

                    <TextView
                        android:id="@+id/tvChonKieuXuat"
                        style="@style/tv_13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:background="@drawable/bg_khung"
                        android:drawableRight="@drawable/ic_down_tt"
                        android:gravity="center_vertical"
                        android:hint="Chọn kiểu xuất"
                        android:padding="@dimen/dp10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="vertical">

                <TextView
                    style="@style/title_sanpham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú" />

                <EditText
                    android:id="@+id/edtGhichu"
                    style="@style/tv_13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp1"
                    android:layout_weight="1"
                    android:background="@drawable/bg_khung"
                    android:hint="Nhập ghi chú"
                    android:maxLines="1"
                    android:padding="@dimen/dp10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="vertical">

                <TextView
                    style="@style/title_sanpham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="@dimen/dp1"
                    android:background="@drawable/bg_khung"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchChonSanPhamXh"
                        style="@style/tv_13sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-15dp"
                        app:queryBackground="@android:color/transparent"
                        app:searchIcon="@drawable/ic_search" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvAddPhieuXuat"
        style="@style/tv_15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/btn_margin5"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@drawable/bg_update_ttdh"
        android:gravity="center"
        android:padding="@dimen/btn_margin10"
        android:text="Thêm phiếu xuất"
        android:textColor="@color/mautrang" />

    <ProgressBar
        android:id="@+id/prBarXh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_width200"
        android:padding="@dimen/btn_margin5"
        android:visibility="gone" />

</RelativeLayout>
