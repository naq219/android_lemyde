<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/tv_15sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mautrang"
    tools:context="com.project.shop.lemy.fragment.KhachHangFm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnLayoutkh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTensdt"
            android:background="@color/mauxamtrang"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtDskh"
                style="@style/MyEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin2"
                android:layout_weight="5"
                android:background="@color/mauxamtrang"
                android:gravity="left"
                android:hint="Nhập Tên Khách Hàng, SĐT"
                android:maxLines="1"
                android:textSize="@dimen/them" />

            <ImageView
                android:id="@+id/imgXoakh"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@color/mauxamtrang"
                android:padding="14dp"
                android:src="@drawable/ic_huy"
                android:visibility="gone" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcViewkh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mautrang"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/prBarkh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_width200"
        android:visibility="gone" />
</RelativeLayout>
