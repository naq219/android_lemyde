<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp3"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/tv_15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày bắt đầu" />

            <TextView
                android:id="@+id/tvDateBatDau"
                style="@style/tv_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_khung_edit"
                android:padding="@dimen/dp10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp3"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/tv_15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tới ngày" />

            <TextView
                android:id="@+id/tvDateCuoi"
                style="@style/tv_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_khung_edit"
                android:padding="@dimen/dp10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnHuy"
            style="@style/tv_15sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:background="@drawable/bg_del"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="Hủy"
            android:textColor="@color/mautrang"
            android:textSize="@dimen/dp20" />

        <TextView
            android:id="@+id/btnOk"
            style="@style/tv_15sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:background="@drawable/bg_save"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="Ok"
            android:textColor="@color/mautrang"
            android:textSize="@dimen/dp20" />
    </LinearLayout>
</LinearLayout>