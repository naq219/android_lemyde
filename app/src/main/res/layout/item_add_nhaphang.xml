<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnItemSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameSp"
            style="@style/title_sanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@color/mauxamtrang"
            android:padding="@dimen/dp10"
            android:paddingLeft="@dimen/dp2"
            android:text="Tên sp" />

        <LinearLayout
            android:id="@+id/lnItemKhoangSl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:background="@color/mauxamtrang"
            android:orientation="horizontal">

            <TextView
                style="@style/title_gia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="Khoang chứa" />

            <TextView
                style="@style/title_gia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Số lượng" />

            <TextView
                style="@style/title_gia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Xóa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:background="@color/mautrang"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvKhoangChua"
                style="@style/tv_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:drawableRight="@drawable/ic_down_tt"
                android:gravity="center_vertical"
                android:hint="--Chọn khoang chứa--"
                android:paddingLeft="@dimen/dp3"
                android:textColorHint="@color/mauxamden" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"></View>

            <EditText
                android:id="@+id/edtSoLuong"
                style="@style/tv_13sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="1" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"></View>

            <ImageView
                android:id="@+id/imgDeleteNh"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="7dp"
                android:src="@drawable/ic_deletesms" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dennhat" />

        <ImageView
            android:id="@+id/imgAddSp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp2"
            android:padding="5dp"
            android:src="@drawable/ic_add" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dennhat" />


</LinearLayout>