<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgHinhanh"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_hinhanhsp" />
            <View
                android:layout_width="100dp"
                android:background="#7CFFFFFF"
                android:layout_height="70dp"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTendsspsp"
                style="@style/title_sanpham"
                android:text="Ten SP"
                android:textStyle="bold"
                android:textColor="#D5525151"

                android:gravity="center_vertical"
                android:maxLines="2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#06020202"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/tv_14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:id="@+id/tvorder_tong"
                    android:text="3333" />
                <TextView
                    style="@style/tv_14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:id="@+id/tvorder_24h"
                    android:text="3333" />
                <TextView
                    style="@style/tv_14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tvslkho"

                    android:text="3333" />
                <TextView
                    style="@style/tv_14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:id="@+id/tvtonkho"
                    android:text="3333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/tv_14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/giaNhap"
                    android:text="3333" />

                <TextView
                    android:id="@+id/giaBan"
                    style="@style/tv_14sp"
                    android:layout_weight="1"

                    android:text="4444"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_14sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/giaBuon"
                    android:layout_height="wrap_content"
                    android:text="dsad" />


                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/giaBuonSi"
                        style="@style/tv_14sp"

                        android:text="Gia gia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:paddingTop="40dp"
            android:id="@+id/imgNew"
            android:alpha=".65"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/newicon"
            android:layout_height="70dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Copy Bài"
            android:background="#B06F7478"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:id="@+id/btnCopy"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:text="Tải ảnh"
            android:textColor="#ffffff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#B06F7478"
            android:id="@+id/btnDownload"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tvPostAt"
            style="@style/textbase"/>
    </LinearLayout>
    <View
        android:background="@color/cardview_dark_background"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"></View>
</LinearLayout>