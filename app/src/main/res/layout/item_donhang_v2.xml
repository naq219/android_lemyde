<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D8000000"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    android:paddingBottom="2dp"
    android:id="@+id/lnChinh"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:background="#ff5566"
        android:visibility="gone"
        android:id="@+id/bgMau"
        android:layout_height="3dp"/>
    <LinearLayout
        android:layout_below="@+id/bgMau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"

        android:background="#ffffff"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#030C37"
            android:text=""
            style="@style/tv_12sp"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tvImportain"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#F44336"
            android:visibility="gone"
            android:fontFamily="serif-monospace"

            style="@style/tv_12sp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView


                android:id="@+id/tvShop"
                style="@style/tv_12sp"
                android:layout_width="wrap_content"
                android:text="Shop "
                android:textColor="#030C37"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvCustomer"
                style="@style/tv_12sp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/tvShop"
                android:gravity="right"
                android:text="KH"
                android:textColor="#030C37"
                android:textSize="10sp"
                android:textStyle="italic" />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:lineSpacingMultiplier="1"
                android:layout_weight="93"
                android:id="@+id/tvSanpham"
                android:text="SP "
                style="@style/tv_12sp"/>
        </LinearLayout>

        <TextView

            android:textSize="13sp"
            android:padding="3dp"
            android:id="@+id/tvNote"
            android:layout_gravity="center"
            android:textStyle="italic"
            style="@style/textbase"/>

        <TextView
            android:textColor="@color/colorRed"
            android:background="#000000"
            android:padding="3dp"
            android:visibility="gone"
            android:id="@+id/tvSkipExport"
            android:layout_gravity="center"
            android:text=""
            style="@style/textbase"/>



    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="#ffffff" />

    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@drawable/ic_menu" />
</RelativeLayout>