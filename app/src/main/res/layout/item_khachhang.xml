<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mautrang"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/btn_margin5"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnItemkh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/btn_margin2">

            <TextView
                android:id="@+id/tvTendskh"
                style="@style/title_sanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="Trương Minh Thảo" />

            <TextView
                android:id="@+id/tvDsdienthoai"
                style="@style/tv_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="-1dp"
                android:text="098888888" />

            <TextView
                android:id="@+id/tvDiachi"
                style="@style/tv_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="số 11, ngõ 110-Trung Kính" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgMenukh"
            android:layout_width="50dp"
            android:layout_height="@dimen/height_edt"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/ic_menu" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cardview_dark_background" />
</LinearLayout>