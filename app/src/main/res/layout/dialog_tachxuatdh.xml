<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:visibility="gone"
        android:background="#f5f5f5"
        android:id="@+id/viewTachChon"
        android:layout_width="250dp"
        android:orientation="horizontal"
        android:padding="10dp"

        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/hand_click"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            style="@style/myTv"
            android:text="Chỉ Tách và xuất     \nsp đã CHỌN"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#f5f5f5"
        android:id="@+id/viewXuatAll"

        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/fast_cart"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            style="@style/myTv"
            android:text="Xuất kho"
            />

    </LinearLayout>

    <LinearLayout
        android:background="#f5f5f5"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/viewTachDaco"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/tick"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            style="@style/myTv"
            android:text="Tách đơn"
            />

    </LinearLayout>

</LinearLayout>