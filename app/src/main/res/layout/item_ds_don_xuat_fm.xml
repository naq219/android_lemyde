<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mautrang"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvKhoXuatHang"
            style="@style/tv_12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp5"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp2"
            android:text="Kho Hà đông" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/reset" />

        <TextView
            android:id="@+id/tvKieuXuat"
            style="@style/tv_12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:padding="@dimen/dp5"
            android:paddingLeft="@dimen/dp2"
            android:text="Nhập hàng" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/reset" />

        <TextView
            android:id="@+id/tvIdDonHang"
            style="@style/tv_12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/dp5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp2"
             />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/reset" />

        <TextView
            android:id="@+id/tvSanpham"
            style="@style/tv_12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp5"
            android:lineSpacingExtra="@dimen/btn_pading4"
            android:layout_weight="2"
            android:minLines="2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp2"
            android:text="1 - kollagen 30 ống " />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cardview_dark_background" />
</LinearLayout>