<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mautrang"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/btn_margin2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/btn_margin2"
                android:orientation="horizontal">

                <TextView
                    style="@style/title_sanpham"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tên quản lý : " />

                <TextView
                    android:id="@+id/tvTenitemql"
                    style="@style/tv_14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.8"
                    android:text="Shop LeMy" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/btn_margin2"
                android:orientation="horizontal">

                <TextView
                    style="@style/title_sanpham"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Facebook : " />

                <TextView
                    android:id="@+id/tvFbitemql"
                    style="@style/tv_14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:text="Lê Mỹ" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgMenuShop"
            android:layout_width="50dp"
            android:layout_height="@dimen/height_edt"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/ic_menu" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/btn_margin2"
        android:background="@color/cardview_dark_background"></View>
</LinearLayout>